//0 = Helmet
//1 = Right Shoulder
//2 = Left Shoulder
//3 = Center View
//4 = Gun 
//5 = Hip 

//Customize Controls key
addkeysection "$FPP_BIND" FPPBind
addmenukey "$FPP_TGLE" FPP_Toggle
alias FPP_Toggle "netevent flashlight_plus_toggle"
defaultbind f FPP_Toggle

//Default Preset

alias cl_flashlight_defaultpreset "set cl_flashlight_plus_color 7878B4; set cl_flashlight_plus_location 2; set cl_flashlight_plus_intensity 512; set cl_flashlight_plus_inner 32.0; set cl_flashlight_plus_outer 40.0; set cl_flashlight_plus_second_beam true; set cl_flashlight_plus_color_2_mult 2.0; set cl_flashlight_plus_intensity_2 512; set cl_flashlight_plus_inner_2 0.0; set cl_flashlight_plus_outer_2 15.0"

